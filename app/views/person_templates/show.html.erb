<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Person #<%= @person.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/people" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/people/<%= @person.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit person
        </a>
      </div>

      <div class="col">
        <a href="/delete_person/<%= @person.id %>" class="btn btn-block btn-outline-secondary">
          Delete person
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Family name
      </dt>
      <dd>
        <%= @person.family_name %>
      </dd>

      <dt>
        First name
      </dt>
      <dd>
        <%= @person.first_name %>
      </dd>

      <dt>
        Gender
      </dt>
      <dd>
        <%= @person.gender %>
      </dd>

      <dt>
        Birth date
      </dt>
      <dd>
        <%= @person.birth_date %>
      </dd>

      <dt>
        Phone number1
      </dt>
      <dd>
        <%= @person.phone_number1 %>
      </dd>

      <dt>
        Phone number2
      </dt>
      <dd>
        <%= @person.phone_number2 %>
      </dd>

      <dt>
        Website
      </dt>
      <dd>
        <%= @person.website %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @person.address_id %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <div>
          <%= render partial: "person_templates/one_photo_map" %>
        </div>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@person.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@person.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

