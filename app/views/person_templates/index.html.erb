<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All people
    </h1>

    <a href="/people/new" class="btn btn-block btn-outline-secondary">
      Add a new person
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "person_templates/people_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "person_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Family name
        </th>

        <th>
          First name
        </th>

        <th>
          Gender
        </th>

        <th>
          Birth date
        </th>

        <th>
          Phone number1
        </th>

        <th>
          Phone number2
        </th>

        <th>
          Website
        </th>

        <th>
          Address
        </th>

        <th>
          Address
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @people.each do |person| %>
      <tr>
        <td>
          <%= person.id %>
        </td>

        <td>
          <%= person.family_name %>
        </td>

        <td>
          <%= person.first_name %>
        </td>

        <td>
          <%= person.gender %>
        </td>

        <td>
          <%= person.birth_date %>
        </td>

        <td>
          <%= person.phone_number1 %>
        </td>

        <td>
          <%= person.phone_number2 %>
        </td>

        <td>
          <%= person.website %>
        </td>

        <td>
          <%= person.address_id %>
        </td>

        <td>
          <%= person.address %>
        </td>

        <td>
          <%= time_ago_in_words(person.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(person.updated_at) %> ago
        </td>

        <td>
          <a href="/people/<%= person.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @people, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
