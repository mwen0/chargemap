<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All people
    </h1>

    <a href="/people/new" class="btn btn-block btn-outline-secondary">
      Add a new person
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "person_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Family name
        </th>

        <th>
          First name
        </th>

        <th>
          Gender
        </th>

        <th>
          Birth date
        </th>

        <th>
          Phone number1
        </th>

        <th>
          Phone number2
        </th>

        <th>
          Website
        </th>

        <th>
          Address
        </th>

        <th>
          Address
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @people.each do |person| %>
      <tr>
        <!-- Display person.id start -->
        <td>
          <%= person.id %>
        </td>
        <!-- Display person.id end -->

        <!-- Display person.family_name start -->
        <td>
          <%= person.family_name %>
        </td>
        <!-- Display person.family_name end -->

        <!-- Display person.first_name start -->
        <td>
          <%= person.first_name %>
        </td>
        <!-- Display person.first_name end -->

        <!-- Display person.gender start -->
        <td>
          <%= person.gender %>
        </td>
        <!-- Display person.gender end -->

        <!-- Display person.birth_date start -->
        <td>
          <%= person.birth_date %>
        </td>
        <!-- Display person.birth_date end -->

        <!-- Display person.phone_number1 start -->
        <td>
          <%= person.phone_number1 %>
        </td>
        <!-- Display person.phone_number1 end -->

        <!-- Display person.phone_number2 start -->
        <td>
          <%= person.phone_number2 %>
        </td>
        <!-- Display person.phone_number2 end -->

        <!-- Display person.website start -->
        <td>
          <%= person.website %>
        </td>
        <!-- Display person.website end -->

        <!-- Display person.address_id start -->
        <td>
          <%= person.address_id %>
        </td>
        <!-- Display person.address_id end -->

        <!-- Display person.address start -->
        <td>
          <%= person.address %>
        </td>
        <!-- Display person.address end -->

        <!-- Display person.created_at start -->
        <td>
          <%= time_ago_in_words(person.created_at) %> ago
        </td>
        <!-- Display person.created_at end -->

        <!-- Display person.updated_at start -->
        <td>
          <%= time_ago_in_words(person.updated_at) %> ago
        </td>
        <!-- Display person.updated_at end -->

        <td>
          <a href="/people/<%= person.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @people, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
