<% if @person.present? %>
  <% if @person.errors.any? %>
    <% @person.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new person
</h1>


<hr>

<form action="/create_person" method="post">

  <div class="form-group">
    <label for="family_name">
      Family name
    </label>

    <input type="text" id="family_name" name="family_name" class="form-control" value="<%= @person.family_name %>">
  </div>

  <div class="form-group">
    <label for="first_name">
      First name
    </label>

    <input type="text" id="first_name" name="first_name" class="form-control" value="<%= @person.first_name %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="gender">
    <input id="gender" class="form-check-input" name="gender" type="checkbox" <%= "checked" if @person.gender %>>
    <label for="gender" class="form-check-label">
      Gender
    </label>
  </div>

  <div class="form-group">
    <label for="birth_date">
      Birth date
    </label>

    <input type="text" id="birth_date" name="birth_date" class="form-control" value="<%= @person.birth_date %>">
  </div>

  <div class="form-group">
    <label for="phone_number1">
      Phone number1
    </label>

    <input type="text" id="phone_number1" name="phone_number1" class="form-control" value="<%= @person.phone_number1 %>">
  </div>

  <div class="form-group">
    <label for="phone_number2">
      Phone number2
    </label>

    <input type="text" id="phone_number2" name="phone_number2" class="form-control" value="<%= @person.phone_number2 %>">
  </div>

  <div class="form-group">
    <label for="website">
      Website
    </label>

    <input type="text" id="website" name="website" class="form-control" value="<%= @person.website %>">
  </div>

  <div class="form-group">
    <label for="address_id">
      Address
    </label>

    <input type="text" id="address_id" name="address_id" class="form-control" value="<%= @person.address_id %>">
  </div>

  <div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control" value="<%= @person.address %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create person
  </button>
</form>

<hr>

<a href="/people">
  Go back
</a>
