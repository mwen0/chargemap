<h1>
  Add a new address
</h1>


<hr>

<!-- Form address start -->
<form action="/create_address" method="post">
<!-- Form address end -->

  <!-- Label and input for latitude start -->
  <div class="form-group">
    <label for="latitude">
      Latitude
    </label>

    <!-- Input for latitude start -->
    <input type="text" id="latitude" name="latitude" class="form-control">
    <!-- Input for latitude end -->
  </div>
  <!-- Label and input for latitude end -->

  <!-- Label and input for longitude start -->
  <div class="form-group">
    <label for="longitude">
      Longitude
    </label>

    <!-- Input for longitude start -->
    <input type="text" id="longitude" name="longitude" class="form-control">
    <!-- Input for longitude end -->
  </div>
  <!-- Label and input for longitude end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for address_line1 start -->
  <div class="form-group">
    <label for="address_line1">
      Address line1
    </label>

    <!-- Input for address_line1 start -->
    <input type="text" id="address_line1" name="address_line1" class="form-control">
    <!-- Input for address_line1 end -->
  </div>
  <!-- Label and input for address_line1 end -->

  <!-- Label and input for address_line2 start -->
  <div class="form-group">
    <label for="address_line2">
      Address line2
    </label>

    <!-- Input for address_line2 start -->
    <input type="text" id="address_line2" name="address_line2" class="form-control">
    <!-- Input for address_line2 end -->
  </div>
  <!-- Label and input for address_line2 end -->

  <!-- Label and input for town start -->
  <div class="form-group">
    <label for="town">
      Town
    </label>

    <!-- Input for town start -->
    <input type="text" id="town" name="town" class="form-control">
    <!-- Input for town end -->
  </div>
  <!-- Label and input for town end -->

  <!-- Label and input for post_code start -->
  <div class="form-group">
    <label for="post_code">
      Post code
    </label>

    <!-- Input for post_code start -->
    <input type="text" id="post_code" name="post_code" class="form-control">
    <!-- Input for post_code end -->
  </div>
  <!-- Label and input for post_code end -->

  <!-- Label and input for state_or_province start -->
  <div class="form-group">
    <label for="state_or_province">
      State or province
    </label>

    <!-- Input for state_or_province start -->
    <input type="text" id="state_or_province" name="state_or_province" class="form-control">
    <!-- Input for state_or_province end -->
  </div>
  <!-- Label and input for state_or_province end -->

  <!-- Label and input for has_ev_parking_places start -->
  <div class="form-check">
    <input type="hidden" value="0" name="has_ev_parking_places">
    <!-- Input for has_ev_parking_places start -->
    <input id="has_ev_parking_places" class="form-check-input" name="has_ev_parking_places" type="checkbox">
    <!-- Input for has_ev_parking_places end -->
    <label for="has_ev_parking_places" class="form-check-label">
      Has ev parking places
    </label>
  </div>

  <!-- Label and input for country_id start -->
  <div class="form-group">
    <label for="country_id">
      Country
    </label>

    <!-- Input for country_id start -->
    <%= select_tag(:country_id, options_from_collection_for_select(Country.all, :id, :name, @address.country_id), :class => "form-control") %>
    <!-- Input for country_id end -->
  </div>
  <!-- Label and input for country_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create address
  </button>
</form>

<hr>

<a href="/addresses">
  Go back
</a>
