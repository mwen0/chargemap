<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Address #<%= @address.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/addresses" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/addresses/<%= @address.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit address
        </a>
      </div>

      <div class="col">
        <a href="/delete_address/<%= @address.id %>" class="btn btn-block btn-outline-secondary">
          Delete address
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Latitude
      </dt>
      <dd>
        <%= @address.latitude %>
      </dd>

      <dt>
        Longitude
      </dt>
      <dd>
        <%= @address.longitude %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @address.name %>
      </dd>

      <dt>
        Address line1
      </dt>
      <dd>
        <%= @address.address_line1 %>
      </dd>

      <dt>
        Address line2
      </dt>
      <dd>
        <%= @address.address_line2 %>
      </dd>

      <dt>
        Town
      </dt>
      <dd>
        <%= @address.town %>
      </dd>

      <dt>
        Post code
      </dt>
      <dd>
        <%= @address.post_code %>
      </dd>

      <dt>
        State or province
      </dt>
      <dd>
        <%= @address.state_or_province %>
      </dd>

      <dt>
        Has ev parking places
      </dt>
      <dd>
        <%= @address.has_ev_parking_places %>
      </dd>

      <dt>
        Country
      </dt>
      <dd>
        <% if @address.country.present? %>
          <a href="/countries/<%= @address.country_id %>">
            <%= @address.country.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@address.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@address.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

