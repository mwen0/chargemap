<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Country #<%= @country.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/countries" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/countries/<%= @country.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit country
        </a>
      </div>

      <div class="col">
        <a href="/delete_country/<%= @country.id %>" class="btn btn-block btn-outline-secondary">
          Delete country
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @country.name %>
      </dd>

      <dt>
        Isocode
      </dt>
      <dd>
        <%= @country.isocode %>
      </dd>

      <dt>
        Continent code
      </dt>
      <dd>
        <%= @country.continent_code %>
      </dd>

      <dt>
        Flag image
      </dt>
      <dd>
        <img src="<%= @country.flag_image %>" class="img-fluid">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@country.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@country.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "country_templates/country_addresses" %>
  </div>
</div>
