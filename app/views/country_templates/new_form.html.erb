<h1>
  Add a new country
</h1>


<hr>

<!-- Form country start -->
<form action="/create_country" method="post" enctype="multipart/form-data">
<!-- Form country end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for isocode start -->
  <div class="form-group">
    <label for="isocode">
      Isocode
    </label>

    <!-- Input for isocode start -->
    <input type="text" id="isocode" name="isocode" class="form-control">
    <!-- Input for isocode end -->
  </div>
  <!-- Label and input for isocode end -->

  <!-- Label and input for continent_code start -->
  <div class="form-group">
    <label for="continent_code">
      Continent code
    </label>

    <!-- Input for continent_code start -->
    <input type="text" id="continent_code" name="continent_code" class="form-control">
    <!-- Input for continent_code end -->
  </div>
  <!-- Label and input for continent_code end -->

  <!-- Label and input for flag_image start -->
  <div class="form-group">
    <label for="flag_image">
      Flag image
    </label>

    <!-- Input for flag_image start -->
    <input type="file" id="flag_image" name="flag_image" class="form-control">
    <!-- Input for flag_image end -->
  </div>
  <!-- Label and input for flag_image end -->

  <button class="btn btn-block btn-outline-secondary">
    Create country
  </button>
</form>

<hr>

<a href="/countries">
  Go back
</a>
